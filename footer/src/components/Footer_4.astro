<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800;900&family=Inter:wght@400;500;600;700&display=swap');

  .footer-v4 {
    background: #0f0f0f;
    color: #f5f5f5;
    padding: 6rem 2rem 2rem;
    font-family: 'Inter', sans-serif;
    position: relative;
  }

  .footer-v4::before {
    content: '';
    position: absolute;
    top: 0;
    left: 5%;
    right: 5%;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, #ff6b6b 20%, #4ecdc4 50%, #ffe66d 80%, transparent 100%);
  }

  .footer-wrapper {
    max-width: 1400px;
    margin: 0 auto;
  }

  .hero-section {
    text-align: center;
    margin-bottom: 6rem;
    animation: slideUp 0.8s ease-out;
  }

  .mega-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(3rem, 8vw, 5.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 2.5rem;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .highlight {
    background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 50%, #ffe66d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .hero-cta {
    padding: 1.25rem 3rem;
    font-size: 1.1rem;
    font-weight: 600;
    background: white;
    color: #0f0f0f;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    box-shadow: 0 4px 30px rgba(255, 255, 255, 0.2);
  }

  .hero-cta:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 40px rgba(255, 255, 255, 0.3);
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .hero-cta:hover .arrow-icon {
    transform: translateX(5px);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 5rem;
    margin-bottom: 5rem;
    padding-bottom: 5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideUp 0.8s ease-out 0.2s backwards;
  }

  .brand-block {
    max-width: 450px;
  }

  .brand-title {
    font-family: 'Playfair Display', serif;
    font-size: 3rem;
    font-weight: 900;
    margin: 0 0 1.5rem;
    letter-spacing: -0.02em;
  }

  .brand-description {
    font-size: 1.05rem;
    line-height: 1.7;
    color: #b8b8b8;
    margin: 0 0 2rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-link {
    color: #fff;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .contact-link:hover {
    color: #4ecdc4;
    transform: translateX(5px);
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .link-title {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin: 0 0 1.5rem;
    color: #7a7a7a;
  }

  .link-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-list a {
    color: #f5f5f5;
    text-decoration: none;
    font-size: 1.05rem;
    font-weight: 500;
    transition: all 0.2s ease;
    position: relative;
    display: inline-block;
  }

  .link-list a::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 2px;
    background: #4ecdc4;
    transition: width 0.3s ease;
  }

  .link-list a:hover {
    color: #4ecdc4;
  }

  .link-list a:hover::after {
    width: 100%;
  }

  .action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3.5rem;
    background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(78, 205, 196, 0.1) 100%);
    border-radius: 20px;
    margin-bottom: 4rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideUp 0.8s ease-out 0.4s backwards;
    gap: 2rem;
  }

  .action-label {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #7a7a7a;
    display: block;
    margin-bottom: 0.5rem;
  }

  .action-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.25rem;
    font-weight: 800;
    margin: 0;
    color: #fff;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    flex-shrink: 0;
  }

  .action-btn {
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Inter', sans-serif;
    white-space: nowrap;
  }

  .action-btn.primary {
    background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
    color: white;
    box-shadow: 0 4px 20px rgba(255, 107, 107, 0.3);
  }

  .action-btn.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(255, 107, 107, 0.4);
  }

  .action-btn.secondary {
    background: transparent;
    color: #f5f5f5;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .action-btn.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #4ecdc4;
  }

  .footer-meta {
    animation: slideUp 0.8s ease-out 0.6s backwards;
  }

  .social-row {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .social-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    color: #f5f5f5;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #4ecdc4;
    transform: translateY(-3px);
  }

  .social-text {
    font-size: 0.95rem;
    font-weight: 500;
  }

  .social-btn svg {
    width: 20px;
    height: 20px;
  }

  .meta-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 2rem;
  }

  .copyright {
    color: #7a7a7a;
    font-size: 0.95rem;
    margin: 0;
  }

  .legal-nav {
    display: flex;
    gap: 2rem;
  }

  .legal-nav a {
    color: #b8b8b8;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .legal-nav a:hover {
    color: #4ecdc4;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1200px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .links-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 968px) {
    .links-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .action-bar {
      flex-direction: column;
      text-align: center;
    }

    .action-buttons {
      flex-direction: column;
      width: 100%;
    }

    .action-btn {
      width: 100%;
    }
  }

  @media (max-width: 640px) {
    .footer-v4 {
      padding: 4rem 1.5rem 2rem;
    }

    .mega-title {
      font-size: 2.5rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }

    .social-row {
      flex-direction: column;
    }

    .social-btn {
      justify-content: center;
      width: 100%;
    }

    .meta-bottom {
      flex-direction: column;
      text-align: center;
    }

    .legal-nav {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>